    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#0000FF"
        android:id="@+id/card_second_usn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_second_usn" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usn"
                android:text="STUDENT USN : "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d_second_usn"

                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="#0000FF"
        android:id="@+id/view"
        android:layout_below="@+id/card_second_usn">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK FOR TIME TABLE"
        android:id="@+id/time_table"/>
</android.support.v7.widget.CardView>
</RelativeLayout>
